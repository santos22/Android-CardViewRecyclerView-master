<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hathy.listsandcards">
    <uses-sdk android:minSdkVersion="18"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true" android:label="Clever"
        android:icon="@drawable/clever_launcher" android:theme="@style/AppTheme">

        <activity android:name=".RecyclerViewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".CardViewActivity"></activity>

    </application>

</manifest>
